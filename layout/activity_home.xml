<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#00e5ff"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="291dp"
        android:layout_height="224dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/white">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REFER CODE"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="156dp"
            android:layout_height="141dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/coin1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="140dp"
        android:layout_height="41dp"
        android:text="FREE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <androidx.cardview.widget.CardView
        android:layout_width="291dp"
        android:layout_height="314dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#00c3ff">

        <TextView
            android:id="@+id/contant"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#00e5ff"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="* Get Premium Subscription Worth RS.300. Invite Minimum 3 Friends. *"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/share_button"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:text="SHARE"
            android:textSize="25sp"
            android:onClick="shareReferralCode"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>
